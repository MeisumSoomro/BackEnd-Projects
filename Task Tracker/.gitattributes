# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text
*.txt text
README.md text

# JSON files
*.json text

# Declare files that will always have specific line endings
tasks.sh text eol=lf
tasks.bat text eol=crlf 